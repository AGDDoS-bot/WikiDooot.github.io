{
  "name": "wiki",
  "version": "1.0.0",
  "description": "A project of vuepress-theme-hope",
  "license": "MIT",
  "scripts": {
    "serve:vite": "vuepress-vite dev src",
    "serve:webpack": "vuepress-webpack dev src",
    "serve-clean:vite": "vuepress-vite dev src --clean-cache",
    "serve-clean:webpack": "vuepress-webpack dev src --clean-cache",
    "build:vite": "vuepress-vite build src",
    "build:webpack": "vuepress-webpack build src",
    "build-super:vite": "node --max_old_space_size=8192 ./node_modules/vuepress-vite/lib/index.js build src",
    "build-super:webpack": "node --max_old_space_size=8192 ./node_modules/vuepress-webpack/lib/index.js build src",
    "debug-serve:vite": "cross-env DEBUG=vuepress* vuepress-vite dev src",
    "debug-build:vite": "cross-env DEBUG=vuepress* vuepress-vite build src",
    "debug-serve:webpack": "cross-env DEBUG=vuepress* vuepress-webpack dev src",
    "debug-build:webpack": "cross-env DEBUG=vuepress* vuepress-webpack build src",
    "test": "echo \"Warning: no test specified\" && exit 0"
  },
  "devDependencies": {
    "@vuepress/plugin-search": "^2.0.0-beta.38",
    "vuepress": "^2.0.0-beta.39",
    "vuepress-plugin-reading-time2": "^2.0.0-beta.45",
    "vuepress-theme-hope": "^2.0.0-beta.45"
  }
}
